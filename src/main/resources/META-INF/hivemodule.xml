<?xml version="1.0" encoding="UTF-8"?>

<module id="ch.sbb.polarion.extension.requirements_inspector" version="1.0.0">

    <service-point id="requirementsInspectorJobUnitFactory" interface="com.polarion.platform.jobs.IJobUnitFactory">
        <invoke-factory>
            <construct class="ch.sbb.polarion.extension.requirements_inspector.RequirementsInspectorJobUnitFactory">
            </construct>
        </invoke-factory>
    </service-point>

    <contribution configuration-id="com.polarion.platform.jobs.configuration">
        <jobUnitFactory name="requirementsInspection" factory="requirementsInspectorJobUnitFactory"/>
    </contribution>

    <contribution configuration-id="com.polarion.xray.webui.administrationPageExtenders">
        <extender id="about"
                  name="About"
                  parentNodeId="requirements-inspector"
                  parentNodeName="Requirements Inspector"
                  parentNodeIconUrl="/polarion/requirements-inspector-admin/ui/images/menu/30x30/_parent.svg"
                  iconUrl="/polarion/requirements-inspector-admin/ui/images/menu/16x16/about.svg"
                  pageUrl="/polarion/requirements-inspector-admin/pages/about.jsp?scope=$scope$"
                  projectScope="true"
                  projectGroupScope="false"
                  repositoryScope="true"/>

        <extender id="rest-api"
                  name="REST API"
                  parentNodeId="requirements-inspector"
                  iconUrl="/polarion/requirements-inspector-admin/ui/images/menu/16x16/rest_api.svg"
                  pageUrl="/polarion/requirements-inspector/rest/swagger"
                  projectScope="true"
                  projectGroupScope="false"
                  repositoryScope="true"/>
    </contribution>
</module>
